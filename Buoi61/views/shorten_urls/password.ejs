<div>
  <h1 class="text-center">Vui lòng nhập mật khẩu để mở liên kết</h1>
  <form action="" method="post" style="width: 300px; margin: 0 auto">
    <div class="mb-4">
      <label for="password">Password</label>
      <div>
        <input
          type="password"
          name="password"
          placeholder="Password..."
          class="w-100 form-control"
        />
        <%- req.errors?.password ? `<span class="text-danger"
          >${req.errors?.password}</span
        >`: '' %>
      </div>
    </div>

    <div class="">
      <button class="btn btn-primary w-100 mb-2">Mở liên kết</button>
    </div>
  </form>
</div>
